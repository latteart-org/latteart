{
  "name": "latteart",
  "version": "2.15.4",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx -y only-allow npm",
    "test": "run-p test:gui test:other",
    "test:gui": "npm run test -w latteart-gui",
    "test:other": "jest --runInBand tests/unit",
    "package": "run-p package:win package:mac package:node",
    "package:win": "run-p package:win:launch package:win:cli package:win:gui package:win:repository package:win:capturecl",
    "package:mac": "run-p package:mac:launch package:mac:cli package:win:gui package:mac:repository package:mac:capturecl",
    "package:node": "run-p package:node:launch package:node:cli package:node:gui package:node:repository package:node:capturecl",
    "prepackage:win": "npm run build -w latteart-client",
    "prepackage:mac": "npm run build -w latteart-client",
    "prepackage:node": "npm run build -w latteart-client",
    "package:win:launch": "npm run package:win -w latteart-launch",
    "package:mac:launch": "npm run package:mac -w latteart-launch",
    "package:node:launch": "npm run package:node -w latteart-launch",
    "package:win:cli": "npm run package:win -w latteart-cli",
    "package:mac:cli": "npm run package:mac -w latteart-cli",
    "package:node:cli": "npm run package:node -w latteart-cli",
    "package:win:gui": "npm run package -w latteart-gui",
    "package:mac:gui": "npm run package -w latteart-gui",
    "package:node:gui": "npm run package -w latteart-gui",
    "package:win:repository": "npm run package:win -w latteart-repository",
    "package:mac:repository": "npm run package:mac -w latteart-repository",
    "package:node:repository": "npm run package:node -w latteart-repository",
    "package:win:capturecl": "npm run package:win -w latteart-capture-cl",
    "package:mac:capturecl": "npm run package:mac -w latteart-capture-cl",
    "package:node:capturecl": "npm run package:node -w latteart-capture-cl",
    "postpackage:win:launch": "node -e \"require('fs-extra').copySync(`packages/latteart-launch/dist/package/win/latteart`, 'dist/package/win');\"",
    "postpackage:mac:launch": "node -e \"require('fs-extra').copySync(`packages/latteart-launch/dist/package/mac/latteart`, 'dist/package/mac');\"",
    "postpackage:node:launch": "node -e \"require('fs-extra').copySync(`packages/latteart-launch/dist/package/node/latteart`, 'dist/package/node');\"",
    "postpackage:win:cli": "node -e \"require('fs-extra').copySync(`packages/latteart-cli/dist/package/win/latteart`, 'dist/package/win');\"",
    "postpackage:mac:cli": "node -e \"require('fs-extra').copySync(`packages/latteart-cli/dist/package/mac/latteart`, 'dist/package/mac');\"",
    "postpackage:node:cli": "node -e \"require('fs-extra').copySync(`packages/latteart-cli/dist/package/node/latteart`, 'dist/package/node');\"",
    "postpackage:win:gui": "node -e \"require('fs-extra').copySync(`packages/latteart-gui/dist/package/latteart`, 'dist/package/win');\"",
    "postpackage:mac:gui": "node -e \"require('fs-extra').copySync(`packages/latteart-gui/dist/package/latteart`, 'dist/package/mac');\"",
    "postpackage:node:gui": "node -e \"require('fs-extra').copySync(`packages/latteart-gui/dist/package/latteart`, 'dist/package/node');\"",
    "postpackage:win:repository": "node -e \"require('fs-extra').copySync(`packages/latteart-repository/dist/package/win/latteart`, 'dist/package/win');\"",
    "postpackage:mac:repository": "node -e \"require('fs-extra').copySync(`packages/latteart-repository/dist/package/mac/latteart`, 'dist/package/mac');\"",
    "postpackage:node:repository": "node -e \"require('fs-extra').copySync(`packages/latteart-repository/dist/package/node/latteart`, 'dist/package/node');\"",
    "postpackage:win:capturecl": "node -e \"require('fs-extra').copySync(`packages/latteart-capture-cl/dist/package/win/latteart`, 'dist/package/win');\"",
    "postpackage:mac:capturecl": "node -e \"require('fs-extra').copySync(`packages/latteart-capture-cl/dist/package/mac/latteart`, 'dist/package/mac');\"",
    "postpackage:node:capturecl": "node -e \"require('fs-extra').copySync(`packages/latteart-capture-cl/dist/package/node/latteart`, 'dist/package/node');\"",
    "lint": "npm run lint -ws --if-present",
    "fix": "npm run fix -ws --if-present",
    "version:patch": "run-s version:patch:workspaces version:patch:self",
    "version:minor": "run-s version:minor:workspaces version:minor:self",
    "version:patch:self": "npm version patch --no-git-tag-version",
    "version:minor:self": "npm version minor --no-git-tag-version",
    "version:patch:workspaces": "npm run version:patch -ws",
    "version:minor:workspaces": "npm run version:minor -ws",
    "postversion:patch": "npm install",
    "postversion:minor": "npm install"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "fs-extra": "^11.1.0",
    "jest": "^29.7.0",
    "mkdirp": "^2.1.1",
    "npm-run-all2": "^6.1.2",
    "pkg": "^5.8.0",
    "prettier": "^3.0.3",
    "rimraf": "^4.1.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "overrides": {
    "pkg": {
      "pkg-fetch": "^3.5.2"
    }
  }
}
