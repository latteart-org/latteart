{
  "name": "latteart-repository",
  "version": "2.8.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --runInBand",
    "build": "webpack --config webpack.prod.js",
    "watch": "webpack -w --config webpack.dev.js",
    "run": "node dist/index.js",
    "package": "run-p package:win package:mac",
    "package:win": "pkg -t node18-win-x64 --out-path dist/package/win/latteart/latteart-repository pkg.config.json",
    "package:mac": "pkg -t node18-macos-x64 --out-path dist/package/mac/latteart/latteart-repository pkg.config.json",
    "prepackage:win": "run-s copy:settings:win install:dependencies:win build",
    "prepackage:mac": "run-s copy:settings:mac install:dependencies:mac build",
    "copy:settings:win": "cpx \"latteart*.config.json\" dist/package/win/latteart/latteart-repository",
    "copy:settings:mac": "cpx \"latteart*.config.json\" dist/package/mac/latteart/latteart-repository",
    "install:dependencies:win": "node-pre-gyp install --directory=../../node_modules/sqlite3 --target_platform=win32 --target_libc=unknown --target_arch=x64",
    "install:dependencies:mac": "node-pre-gyp install --directory=../../node_modules/sqlite3 --target_platform=darwin --target_libc=unknown --target_arch=x64",
    "generate:routes": "tsoa routes",
    "postgenerate:routes": "prettier --write src/routes/routes.ts",
    "generate:apidoc": "tsoa spec",
    "generate:migration": "npm run typeorm migration:generate --",
    "typeorm": "node --require ts-node/register ../../node_modules/typeorm/cli.js --config cli_ormconfig.ts",
    "lint": "eslint src tests",
    "fix": "run-s fix:lint fix:format",
    "fix:lint": "eslint --fix src tests",
    "fix:format": "prettier --write src tests",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version"
  },
  "dependencies": {
    "adm-zip": "^0.5.9",
    "archiver": "^5.0.2",
    "body-parser": "^1.19.0",
    "dayjs": "^1.11.3",
    "encoding-japanese": "^1.0.30",
    "express": "^4.17.1",
    "fs-extra": "^11.1.0",
    "jsdoc-api": "^8.0.0",
    "jsdoc-mermaid": "^1.0.0",
    "log4js": "^6.3.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "tsoa": "^5.1.1",
    "typeorm": "^0.2.37",
    "uuid": "^8.3.2",
    "xlsx": "^0.17.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.4.34",
    "@types/archiver": "^3.1.1",
    "@types/body-parser": "^1.19.1",
    "@types/encoding-japanese": "^1.0.16",
    "@types/express": "4.17.13",
    "@types/fs-extra": "^9.0.3",
    "@types/log4js": "^2.3.5",
    "@types/uuid": "^8.3.4"
  }
}
