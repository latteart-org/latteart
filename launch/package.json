{
  "name": "launch",
  "version": "1.0.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "build": "webpack",
    "watch": "webpack -w",
    "package": "yarn package:win & yarn package:mac",
    "package:win": "pkg -t node16-win-x64 --out-path dist/win . && cpx \"*.bat\" dist && cpx launch.config.json dist",
    "package:mac": "pkg -t node16-macos-x64 --out-path dist/mac . && cpx \"*.sh\" dist && cpx launch.config.json dist",
    "prepackage:win": "yarn build",
    "prepackage:mac": "yarn build"
  },
  "bin": {
    "launch": "dist/main.js"
  },
  "dependencies": {
    "encoding-japanese": "^1.0.30",
    "fs-extra": "^10.1.0"
  },
  "devDependencies": {
    "@types/encoding-japanese": "^1.0.18",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.11.7",
    "cpx": "^1.5.0",
    "pkg": "^5.8.0",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.2"
  },
  "resolutions": {
    "glob-parent": "^5.1.2",
    "braces": "^2.3.1"
  },
  "pkg": {
    "assets": [
      "dist/main.js"
    ],
    "name": "launch"
  }
}
